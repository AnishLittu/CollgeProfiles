<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:weightSum="1">



    <ImageView

        android:layout_width="match_parent"

        android:layout_height="220dp"

        android:src="@drawable/literary"

        android:id="@+id/img"

        android:scaleType="centerCrop"

        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" />


    <ImageButton

        android:layout_width="50dp"

        android:layout_height="45dp"

        android:src="@drawable/back2"

        android:id="@+id/imageButton"

        style="@style/Widget.AppCompat.Button.Borderless"


        />



    />

    <Button

        android:text="+ Follow"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:id="@+id/butfol"

        style="@style/Widget.AppCompat.Button.Borderless"

        android:textStyle="bold"

        android:textColor="#FFF"

        android:layout_alignBottom="@+id/img"

        android:layout_alignParentRight="true"

        android:layout_alignParentEnd="true"

        android:textSize="20sp"
        />


    <Button

        android:text="Chat Room"

        android:layout_width="175dp"

        android:layout_height="50dp"

        android:layout_marginTop="60dp"

        android:id="@+id/butchat"

        android:textColor="#FFF"

        android:background="@drawable/shape"


        android:layout_below="@+id/img"

        android:layout_centerHorizontal="true" />


    <Button

        android:text="Find people"

        android:layout_width="175dp"

        android:layout_height="50dp"

        android:id="@+id/people"

        android:background="@drawable/shape"

        android:textColor="#FFF"


        android:layout_below="@+id/butchat"

        android:layout_alignLeft="@+id/butchat"

        android:layout_alignStart="@+id/butchat"

        android:layout_marginTop="19dp" />


    <Button

        android:text="wall"

        android:layout_width="175dp"

        android:layout_height="50dp"

        android:id="@+id/butwall"

        android:background="@drawable/shape"

        android:textColor="#FFF"


        android:layout_below="@+id/people"

        android:layout_alignLeft="@+id/people"

        android:layout_alignStart="@+id/people"

        android:layout_marginTop="19dp" />


    <ImageView

        android:layout_width="100dp"

        android:layout_height="100dp"

        android:id="@+id/imageView"

        android:layout_above="@+id/people"

        android:layout_marginBottom="89dp"

        android:layout_alignTop="@+id/butfol" />



</RelativeLayout>